
<%= form_with model: @operation, url: operation_registration_path, local: true do |f| %>
  <%= render "operations/shared/error_messages", resource: resource %>

  <div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      フットサル運営 会員情報入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">開催元</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :operation_name, class:"input-default", id:"operation_name", placeholder:"例) 〇〇フットサル場", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">住所1</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :address, class:"input-default", id:"address", placeholder:"例) 〇〇県〇〇市" %>
  </div>

  <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">住所2</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例) 〇〇町 〇丁目 〇番地 マンション名" %>
  </div>

  <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">代表者名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :person, class:"input-default", id:"person", placeholder:"例)山田 太郎" %>
  </div>

  <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">電話番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :operation_phone, class:"input-default", id:"operation_phone", placeholder:"例) 09012345678" %>
    </div>
  </div>

  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>

<% end %>


